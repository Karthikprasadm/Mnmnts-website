<div class="loading"></div>
<style>
  @media (scripting: enabled) {
    .loading {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--color-bg);
      display: grid;
      place-items: center;
      z-index: 1000;
      overflow: hidden;
      transition: opacity 0.2s ease-out;
    }
    .loading.hidden {
      display: none !important;
      opacity: 0;
      pointer-events: none;
    }
  }
  /* Fallback: hide preloader if scripts are disabled or fail */
  @media (scripting: disabled) {
    .loading {
      display: none !important;
    }
  }
</style>
<script src="../scripts/preloader.js"></script>
