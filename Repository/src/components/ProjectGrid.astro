---
import ProjectMiniCard from "./ProjectMiniCard.astro";

type Props = {
  projects: {
    name: string;
    full_name: string;
    language: string | null;
  }[];
};

const { projects } = Astro.props;
---

<section>
  {projects.map((project) => <ProjectMiniCard project={project} />)}
</section>

<style>
  section {
    display: flex;
    width: 100%;
    gap: 2rem;
    flex-direction: column;
  }
</style>

