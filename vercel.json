{
  "buildCommand": "npm install && cd Repository && npm install && npm run build && cd ../spotify-visualiser && npm install && npm run build",
  "installCommand": "npm install && cd Repository && npm install && cd ../spotify-visualiser && npm install",
  "outputDirectory": ".",
  "redirects": [
    {
      "source": "/spotify-visualiser/index.html",
      "destination": "/spotify-visualiser/dist/index.html",
      "permanent": false
    }
  ],
  "cleanUrls": false,
  "rewrites": [
    {
      "source": "/spotify-visualiser",
      "destination": "/spotify-visualiser/dist/index.html"
    },
    {
      "source": "/spotify-visualiser/",
      "destination": "/spotify-visualiser/dist/index.html"
    },
    {
      "source": "/spotify-visualiser/:path*",
      "destination": "/spotify-visualiser/dist/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/_astro/(.*)",
      "destination": "/Repository/dist/_astro/$1"
    },
    {
      "source": "/repo/images/artists/:file",
      "destination": "/Repository/dist/images/artists/:file"
    },
    {
      "source": "/repo/images/albums/:file",
      "destination": "/Repository/dist/images/albums/:file"
    },
    {
      "source": "/repo/images/icons/:file",
      "destination": "/Repository/dist/images/icons/:file"
    },
    {
      "source": "/repo/images/:file",
      "destination": "/Repository/dist/images/:file"
    },
    {
      "source": "/repo/_astro/(.*)",
      "destination": "/Repository/dist/_astro/$1"
    },
    {
      "source": "/repo/favicon/(.*)",
      "destination": "/Repository/dist/favicon/$1"
    },
    {
      "source": "/repo",
      "destination": "/Repository/dist/index.html"
    },
    {
      "source": "/repo/",
      "destination": "/Repository/dist/index.html"
    },
    {
      "source": "/repo/:path*",
      "destination": "/Repository/dist/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://ik.imagekit.io https://api.imagekit.io https://sdk.scdn.co; frame-ancestors 'none';"
        }
      ]
    },
    {
      "source": "/spotify-visualiser/src/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    },
    {
      "source": "/repo/images/(.*\\.webp)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/webp"
        }
      ]
    },
    {
      "source": "/repo/images/(.*\\.png)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/png"
        }
      ]
    },
    {
      "source": "/repo/images/(.*\\.jpg)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/jpeg"
        }
      ]
    },
    {
      "source": "/repo/images/(.*\\.jpeg)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/jpeg"
        }
      ]
    }
  ]
}
