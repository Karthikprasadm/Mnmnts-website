---
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";

import { SEO } from "astro-seo";

import SmoothScroll from "../components/SmoothScroll.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import "@fontsource-variable/instrument-sans";
import instrumentSansWoff2 from "@fontsource-variable/instrument-sans/files/instrument-sans-latin-wght-normal.woff2";

type Props = {
  title: string;
  description?: string;
};

const { title, description = "mnmnts Concept" } = Astro.props;

// Get base URL for path resolution
const baseUrl = import.meta.env.BASE_URL;

// Current page value (/home, /about, /404 ...)
// Check if we're on the index/home page (base path, index.html, or archive.html)
const pathname = Astro.url.pathname.replace(/\/$/, "");
const pathParts = pathname.split("/").filter(p => p);
const lastPart = pathParts[pathParts.length - 1] || "";
// If we're at the base path, index, or archive.html, it's the home page
const currentPage =
  pathname === baseUrl.replace(/\/$/, "") || 
  lastPart === "" || 
  lastPart === "index" || 
  lastPart === "archive" || 
  lastPart === "archive.html"
    ? "home" 
    : lastPart || "home";
---

<!doctype html>
<html lang="en" data-page={currentPage}>
  <head>
    <SEO
      title={title}
      description={description}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: title,
          type: "image/jpeg",
          image: `${baseUrl}playersclub-og.jpg`,
        },
      }}
      twitter={{
        creator: "@codrops",
      }}
      extend={{
        // extending the default link tags
        link: [
          {
            rel: "icon",
            type: "image/png",
            sizes: "16x16",
            href: `${baseUrl}favicon/favicon-16x16.png`,
          },
          {
            rel: "icon",
            type: "image/png",
            sizes: "32x32",
            href: `${baseUrl}favicon/favicon-32x32.png`,
          },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: `${baseUrl}favicon/apple-touch-icon.png`,
          },
          { rel: "manifest", href: `${baseUrl}favicon/site.webmanifest` },
          { rel: "sitemap", href: `${baseUrl}sitemap-index.xml` },
          {
            rel: "preload",
            href: instrumentSansWoff2,
            as: "font",
            type: "font/woff2",
            crossorigin: "anonymous",
          },
        ],
        // extending the default meta tags
        meta: [
          { name: "twitter:image", content: `${baseUrl}playersclub-og.jpg` },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
          { name: "viewport", content: "width=device-width" },
          { name: "msapplication-TileColor", content: "#000000" },
          { name: "theme-color", content: "#ffffff" },
          { name: "generator", content: Astro.generator },
        ],
      }}
    />
    <ClientRouter />
  </head>
  <body>
    <div class="stars"></div>
    <SmoothScroll />
    <Navbar />
    <slot />
    <Footer />
    <script>
      import "../scripts/imageFade.js";
    </script>
  </body>
</html>